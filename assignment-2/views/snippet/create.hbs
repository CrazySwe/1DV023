<form class="pure-form pure-form-stacked" action="/snippet/create" method="POST">
<fieldset>
    <legend>New Snippet</legend>
        <label for="title">Title:</label>
        <input type="text" placeholder="Title.." name="title">
        
        <label for="snippetbody">Snippet:</label>
        <textarea name="snippetbody">
        </textarea>

        <label for="tags">Tags (separate with commas)</label>
        <input type="text" placeholder="tag1,tag2,tag3..." name="tags">

    <input class="pure-button pure-button-primary" type="submit" value="Create New Snippet">
</fieldset>
</form>